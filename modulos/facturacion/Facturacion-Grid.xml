<rows>
    <head>
        <beforeInit>
            <call command='setEditable'>
                <param>false</param>
            </call>
            <call command='enableMultiline'>
                <param>true</param>
            </call>
        </beforeInit>
        <column type="ro"   id="alumno"     width="140">Alumno</column>
        <column type="ro"   id="fecha"      width="250">Fecha</column>
        <column type="ro"   id="factura"    width="140">Factura</column>
        <column type="ro"   id="concepto"   width="140">Concepto</column>
        <column type="ro"   id="valor"      width="120">Valor</column>
        <column type="ro"   id="abonos"     width="220">Abonos</column>
    </head>
</rows>
